{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CUDA (Nsight)",
      "type": "cuda-gdb",
      "request": "launch",
      "program": "${workspaceFolder}/build/elementwise/elementwise",
      "miDebuggerPath": "/usr/local/cuda/bin/cuda-gdb",
      "env": {
        "CUDA_LAUNCH_BLOCKING": "1",
        "CUDA_DEBUGGER_SOFTWARE_PREEMPTION": "1"
      },
      "args": ["-k", "0"],
      // "args": ["-k", "0", "-n", "1024", "-b", "256", "-g", "0", "-d", "0"], // Example args
      "setupCommands": [
        {
          "description": "Break on kernel launch",
          "text": "set cuda break_on_launch application",
          "ignoreFailures": true
        },
        {
          "description": "Disable source timestamp check",
          "text": "set check-source-file off",
          "ignoreFailures": true
        },
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    },
  ]
}